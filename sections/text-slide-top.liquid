<style>
   .custom-text_slider_section {
   display: flex;
   flex-flow: column;
   align-items: center;
   padding-top: 20px;
    
}
  .custom-slider--{{ section-id }}{
   background: {{ section.settings.background_annoucement}};
  }
 .custom-text_slider_section div.container {
	 transition: all .3s ease;
}
 .custom-text_slider_section div.container h1 {
	 margin: 15px 0 0 0;
}
 .custom-text_slider_section div.container h3 {
	 margin: 0 0 25px 0;
}
 @media (max-width: 992px) {
	 .custom-text_slider_section {
	}
}
 .custom-text_slider_section .slide-option {
	 margin: 0 0 50px 0;
}
 .custom-text_slider_section .slide-option .no-marg {
	 margin: 0 0 0 0;
}
 div.highway-slider {
	 display: flex;
	 justify-content: center;
	 width: 100%;
}
 div.highway-slider div.highway-barrier {
	 overflow: hidden;
	 position: relative;
}
 div.highway-slider ul.highway-lane {
	 display: flex;
	 height: 100%;
}
 div.highway-slider ul.highway-lane li.highway-car {
	 flex: 1;
	 
}
.custom_highway_car--{{ section-id }}{
  color: {{section.settings.background_annoucement_text_color}};
}
 @keyframes translateinfinite {
	 100% {
		 transform: translateX(calc(-2160px));
	}
}
 #infinite div.highway-barrier {

}

 #infinite div.highway-barrier ul.highway-lane {
	 width: calc(4320px);
}
 #infinite div.highway-barrier ul.highway-lane li.highway-car {
	 min-width: 260px;
	 animation: translateinfinite 25s linear infinite;
}
 #infinite div.highway-barrier ul.highway-lane li.highway-car span.fab {
	 font-size: 65px;
}
 #red {
	 background: #cb5454;
}
 #orange {
	 background: #cb8054;
}
 #yellow {
	 background: #cbba54;
}
 #green {
	 background: #69b46e;
}
 #blue {
	 background: #6091b0;
}
</style>
