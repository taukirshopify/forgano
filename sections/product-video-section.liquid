{% style %}
  .product-video-section {

    margin:200px 0;
    padding:0 50px;
  }
{% endstyle %}
<div class="product-video-section">
  <div class="video-wrapper">
    <video controls="controls" autoplay muted loop playsinline preload="metadata">
      <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
    </video>
  </div>
  
</div>
{% schema %}
  {
      "name": "Product Video ",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      }

    ],
    "presets": [
      {
        "name": "Product Video"
      }
    ]
  }
{% endschema %}


