{% style %}
.video-wrapper iframe, .video-wrapper video {
  display:none;
     position: unset;
    top: 0;
    left: 0;
  width: 100%; 
    height: 80vh;
    overflow: hidden;
}


@media only screen and (max-width: 750px)  {

  .video-wrapper iframe, .video-wrapper video {
    display:block;


  }
  .video-wrapper {

    padding-bottom: 0;

}


}
{% endstyle %}
<div class="product-video-section">
  <div class="video-wrapper">
    <video controls="controls"  muted loop playsinline preload="metadata" poster="{{ section.settings.image | img_url:'master' }}">
      <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
    </video>
  </div>
  
</div>
{% schema %}
  {
      "name": "Product Video ",
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Movie poster"
      }

    ],
    "presets": [
      {
        "name": "Product Video"
      }
    ]
  }
{% endschema %}


