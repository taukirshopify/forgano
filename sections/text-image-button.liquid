<div class="text-image--wrapper">
<div class="text-image-button-wrapper mobile-hide">
<div class="text-image-wrapper-left">
<div class="text-image-wrapper-1">
<div>
{% if section.settings.imagelink != blank %}<a href="{{ section.settings.imagelink }}">{% endif %}
{{ section.settings.image | img_url:"master" | img_tag }}
{% if section.settings.imagelink != blank %}</a>{% endif %}
</div>
   
        
<div><h3>
{{ section.settings.h3}}
</h3></div>
</div>
<div class="text-image-wrapper-2">
<div>
<a href="{{ section.settings.buttonLink}}" class="btn-style-1">
{{ section.settings.buttonLabel}}
{% render 'rectangle-icon' %}
</a>
</div>
  <div>
    {% if section.settings.imagelink != blank %}<a href="{{ section.settings.image2link }}">{% endif %}
    {{ section.settings.image2 | img_url:"master" | img_tag }}
{% if section.settings.imagelink != blank %}</a>{% endif %}
  </div>
</div>
</div>

  <div class="text-image-wrapper-right">
      <div class="desktop">
       {{ section.settings.image3 | img_url:"master" | img_tag }}
    </div>
    <div class="mobile"> {{ section.settings.image-m | img_url:"master" | img_tag }} </div>
     
</div>
</div>
  <div class="text-image-button-wrapper mobile-show">
<div class="text-image-wrapper-left">
<h3>
{{ section.settings.h3}}
</h3>
  <div class="text-image-wrapper-right">
  <div>{{ section.settings.image3 | img_url:"master" | img_tag }}</div>
    <div class="text-image-wrapper-2"> 
    <div>
    {% if section.settings.imagelink != blank %}<a href="{{ section.settings.imagelink }}">{% endif %}

    <div class="desktop"> {{ section.settings.image | img_url:"master" | img_tag }} </div>
    <div class="mobile">{{ section.settings.image2-m | img_url:"master" | img_tag }}</div>

    {% if section.settings.imagelink != blank %}</a> {% endif %}
    </div>
<div> <a href="{{ section.settings.buttonLink}}" class="btn-style-1">
{{ section.settings.buttonLabel}}
{% render 'rectangle-icon' %}
</a>
</div>
</div>
</div>
</div>


</div>
</div>
{% schema %}
{
"name": "Text Image Button",
"class":"text-image-button",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
  "type": "image_picker",
  "id": "image2-m",
  "label": "Image for mobile"
  },
{
"type": "url",
"id": "imagelink",
"label": "Image Link"
},  
{
"type": "url",
"id": "buttonLink",
"label": "Button Link"
},
{
"type": "text",
"id": "buttonLabel",
"label": "Button Label"
},
{
"type": "richtext",
"id": "h3",
"label": "Heading"
},
{
"type": "image_picker",
"id": "image2",
"label": "Image"
},
  {
"type": "url",
"id": "image2link",
"label": "Image Link"
},  
{
"type": "image_picker",
"id": "image3",
"label": "Image"
},
{
  "type": "image_picker",
  "id": "image-m",
  "label": "Image for mobile"
  }
]
}
{% endschema %}

<style>




.desktop{
   display: none;
}  .mobile{
      display: block;
   }

      @media only screen and (min-width: 750px)  {
       .mobile{
         display: none;
       }
       .desktop{
            display: block;
         }
      }

    </style>

