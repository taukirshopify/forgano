  {
      "name": "Product Image gallery",
    "settings": [],
     "blocks": [
    {
      "type": "text",
  "name": "Text",
  "limit": 1,
  "settings": [
 {
"type": "richtext",
"id": "richtext1",
"label": "Text"
},
      {
"type": "richtext",
"id": "richtext2",
"label": "Text"
}
  ]
    },
           {
      "type": "image",
  "name": "Image",
"settings":[
        {
"type": "image_picker",
"id": "image",
"label": "t:sections.text-and-image.settings.image.label"
}
]
          }
     ]
  }
{% endschema %}

